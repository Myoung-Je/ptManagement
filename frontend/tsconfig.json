{
  "compilerOptions": {
    "target": "es5",
	"module": "esnext",
    "lib": [
      "dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ES6"
    ],
	"jsx": "react",
	"declaration": true,
    "outDir": "./build",
	
	"noImplicitAny": true,
    "noImplicitThis": true,
	"strict": true,
	"strictNullChecks": true,
	"resolveJsonModule": true,
	
    "skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	
    "esModuleInterop": true,
    "moduleResolution": "node",
    
    "baseUrl": ".",
    "paths":{
      "@/*": ["src/*"] 
    },
  },
  "exclude": [
	"node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
