{
  "compilerOptions": {
    "target": "es5",
	"module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
	"jsx": "react-jsx",
	"declaration": true,
    "outDir": "./build",
	
	"noImplicitAny": true,
    "noImplicitThis": true,
	"strict": true,
	"strictNullChecks": true,
	"resolveJsonModule": true,
	
    "skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	
    "esModuleInterop": true,
    "moduleResolution": "node",
    
    "baseUrl": ".",
    "paths":{
      "@/*": ["src/*"] 
    },
  },
  "exclude": [
	"node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
